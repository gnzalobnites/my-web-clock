main
  div#div_ext_reloj.d-flex.justify-content-center.align-items-center.gap-1(style="height: 55vh; padding-top: 25vh")
    div#div_int_reloj.gap-1.d-block
      if(mensaje)
        h4=mensaje
        br
      form(action = "/acceso/login" method = "POST")
        input(id='id' name = "id" type = "text" required placeholder = "ID de usuario")
        br
        br
        input(id='password' name = "password" type = "password" required placeholder = "Contraseña")
        br
        br
        div.d-flex.justify-content-center
          button.btn.btn-primary.btn-sm(type = "Submit") Iniciar sesión
        br
      div.d-flex.justify-content-center
        a(href='/acceso/eliminar-cuenta')
          button.btn.btn-primary.btn-sm Eliminar la cuenta
      

